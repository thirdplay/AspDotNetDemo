@model LoginViewModel
@{
    ViewBag.Title = "ログイン";
}
<h2>@ViewBag.Title</h2>
<hr />
@{
    var ajaxOptions = Ajax.CreateAjaxOptions();
}
@using (@Ajax.BeginForm("Login", "Login", ajaxOptions, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.MessageArea()
    <div class="row">
        <div class="form-group">
            <div class="col-xs-2 control-label">
                <label>ユーザID</label>
            </div>
            <div class="col-xs-4">
                @Html.TextBoxFor(m => m.UserId, new { @class = "form-control" })
                @Html.ValidationFieldFor(m => m.UserId)
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-offset-2 col-xs-4">
                <button class="btn btn-default" name="Button" value="Login">
                    <span class="glyphicon glyphicon-log-in"> ログイン</span>
                </button>
            </div>
        </div>
    </div>
}
@section css{
    <style type="text/css">
        .navbar-nav {
            display: none;
        }
    </style>
}
@section scripts{
    @Scripts.Render("~/bundles/Login/Login")
}